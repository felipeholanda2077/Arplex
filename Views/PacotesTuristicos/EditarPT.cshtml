@model PacotesTuristicos

@{
    ViewData["Title"] = "EditarPT";
}

<form method="POST" asp-action="EditarPT">

    <input type="hidden" asp-for="Id">

    <p>
        <label asp-for="Nome">Informe seu nome:</label>
        <input asp-for="Nome">
    </p>
    <p>
        <label asp-for="Origem">Origem: <select name="Origem">
        <option>Nenhum</option>
        <option>São Paulo</option>
        <option>Rio de janeiro</option>
        <option>Brasilia</option>
        <option>Alagoas</option>
        <option>Amazonas</option>
        <option>Espirito Santo</option>
        </label></select>
    </p>
    <p>
        <label asp-for="Destino">Destino: <select name="Destino">
        <option>Nenhum</option>
        <option>São Paulo</option>
        <option>Rio de janeiro</option>
        <option>Brasilia</option>
        <option>Alagoas</option>
        <option>Amazonas</option>
        <option>Espirito Santo</option>
        </label></select>
    </p>
    <p>
        <label asp-for="Atrativos">Atrativos:</label>
        <input asp-for="Atrativos">
    </p>
    <p>
        <label asp-for="Saida">Data de saída:</label>
        <input asp-for="Saida" type="date">
    </p>
    <p>
        <label asp-for="Retorno">Data de retorno:</label>
        <input asp-for="Retorno" type="date">
    </p>
    <p>
        <input type="submit" value="Editar">
    </p>
</form>